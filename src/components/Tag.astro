---
const {weight} = Astro.props;
const rotation = Math.random()*180-90+"deg";
const hue = Math.random()*360;
const translate = [Math.random()*200-100+"px",Math.random()*200-100+"px"]
---
<p style={`--weight: ${weight}; --rotation: ${rotation}; --hue:${hue}; --x: ${translate[0]}; --y: ${translate[1]}`}><slot /></p>
<style>
    p {
        
        font-size: calc(10px * var(--weight));
        transform: rotate(var(--rotation));
        color: hsl(var(--hue), 70%, 70%);
        translate:  var(--x) var(--y);
    }
</style>